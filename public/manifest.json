{
  "manifest_version": 3,
  "name": "DOMMapper",
  "version": "0.1.0",
  "description": "Simplifying the DOM for cleaner CSS selector mapping",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "dommapper16.png",
      "48": "dommapper48.png",
      "128": "dommapper128.png"
    }
  },
  "icons": {
    "16": "dommapper16.png",
    "32": "dommapper32.png",
    "48": "dommapper48.png",
    "128": "dommapper128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "devtools_page": "devtools.html",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ]
}