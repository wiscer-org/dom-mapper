{
  "manifest_version": 3,
  "name": "DOMMapper",
  "version": "0.1.0",
  "description": "A Chrome extension for DOM mapping.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"]
}
